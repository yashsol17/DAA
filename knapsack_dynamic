#include<bits/stdc++.h>
using namespace std;

struct item {
    int w, v;
    double r;
};

bool compare(item a, item b){
    return a.r > b.r;
}

double knapsack_greedy(item arr[], int n, int c){
    double profit = 0.0;
    for(int i = 0; i<n; i++){
        if(arr[i].w <= c){
            c -= arr[i].w;
            profit += arr[i].v;
        } else{
            profit += arr[i].r * c;
            break;
        }
    }
    return profit;
}

int main() {
    int c;
    int n;
    cout<< "enter the capcity of knapsack:";
    cin>> c;
    cout<< "enter the number of items:";
    cin>> n;
    item arr[n];
    cout<< "enter the weight and value of items:"<< endl;
    for(int i=0; i<n; i++){
        cin>> arr[i].w >> arr[i].v;
        arr[i].r = (double)arr[i].v / arr[i].w;
    }

    sort(arr, arr+ n, compare);
    cout<<"maximum profit is:"<< knapsack_greedy(arr, n, c)<< endl;
    return 0;
}
